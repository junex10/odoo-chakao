<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_tree_transito" model="ir.ui.view">
        <field name="name">view.tree.transito</field>
        <field name="model">ventas.transito</field>
        <field name='arch' type='xml'>
            <tree>
                <field string="Cantidad disponible" name='cant_disponible' />
                <field string="Medidas" name='medidas' />
                <field string="Modelo" name='modelo' />
                <field string="Lonas" name='lonas' />
                <field string="Marca" name='marca' />
                <field string="Precio BS.S" name='precio_bolivar_uno' />
                <field string="Precio USD" name='precio_dolar_uno' />
            </tree>
        </field>
    </record>

    <record id="view_kanba_transito" model="ir.ui.view">
        <field name="name">view.kanba.transito</field>
        <field name="model">ventas.transito</field>
        <field name='arch' type='xml'>
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('ventas.transito', 'image_128', imagen)" alt="Producto" class="o_image_64_contain" />
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="titulo_producto" />
                                </strong>
                                <div name="tags" />
                                <ul>
                                    <li>
                                        Precio BS:
                                        <field name="precio_bolivar_uno" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}" />
                                    </li>
                                    <li>
                                        Precio USD:
                                        <field name="precio_dolar_uno" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}" />
                                    </li>
                                </ul>
                                <div name="tags" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id='action_view_transito' model='ir.actions.act_window'>
        <field name='name'>Listado de precios (transito)</field>
        <field name="type">ir.actions.act_window</field>
        <field name='res_model'>ventas.transito</field>
        <field name='view_mode'>tree,form,kanban</field>
    </record>

    <menuitem id="menu_transito" parent="sale.menu_sale_report" action="super_cauchos.action_view_transito" sequence="2" groups="sales_team.group_sale_manager" />
    

</odoo>
