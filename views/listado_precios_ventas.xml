<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de tabla -->
    <record id="view_tree_todo" model="ir.ui.view">
        <field name="name">view.tree.todo</field>
        <field name="model">ventas.disp</field>
        <field name='arch' type='xml'>
            <tree>
                <field string="Cantidad disponible" name='cant_disponible' />
                <field string="Medidas" name='medidas' />
                <field string="Modelo" name='modelo' />
                <field string="Lonas" name='lonas' />
                <field string="Marca" name='marca' />
                <field string="Precio BS.S" name='precio_bolivar_uno' />
                <field string="Precio USD" name='precio_dolar_uno' />
            </tree>
        </field>
    </record>

    <record id="view_kanba_todo" model="ir.ui.view">
        <field name="name">view.kanba.todo</field>
        <field name="model">ventas.disp</field>
        <field name='arch' type='xml'>
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('ventas.disp', 'image_128', imagen)" alt="Producto" class="o_image_64_contain" />
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="titulo_producto" />
                                </strong>
                                <div name="tags" />
                                <ul>
                                    <li>
                                        Precio BS:
                                        <field name="precio_bolivar_uno" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}" />
                                    </li>
                                    <li>
                                        Precio USD:
                                        <field name="precio_dolar_uno" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}" />
                                    </li>
                                </ul>
                                <div name="tags" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_form_todo" model="ir.ui.view">
        <field name="name">view.form.todo</field>
        <field name="model">ventas.disp</field>
        <field name="arch" type='xml'>
            <form string="Producto">
                <sheet>
                    <field name="imagen" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}" />
                    <group string="Titulo del producto">
                        <h1>
                            <field name='titulo_producto' string='Titulo del producto' />
                        </h1>
                    </group>
                    <label for='estado'>Estado del producto</label>
                    <field name="estado" />
                    <group>
                        <group string="DescripciÃ³n">
                            <field name='modelo' string='Modelo del producto' />
                            <field name='marca' string='Marca del producto' />
                            <field name='lonas' string='Lonas' />
                            <field name='cant_disponible' string='Cantidad' />
                        </group>
                        <group string="Precios">
                            <field name='precio_dolar_uno' string='Precio en USD' />
                            <field name='precio_bolivar_uno' string='Precio en BS.S' />
                        </group>
                    </group>
                    <group string="Precios alternativos">
                        <field name='precio_bolivar_dos' string='Precio en bolivares 2' />
                        <field name='precio_dolar_dos' string='Precio en dolares 2' />
                        <field name='precio_dolar_tres' string='Precio en dolares 3' />
                        <field name='precio_bolivar_tres' string='Precio en bolivares 3' />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='action_view_todo' model='ir.actions.act_window'>
        <field name='name'>Listado de precios (disponible)</field>
        <field name="type">ir.actions.act_window</field>
        <field name='res_model'>ventas.disp</field>
        <field name='view_mode'>tree,form,kanban</field>
    </record>

    <menuitem id="menu_todo" parent="sale.menu_sale_report" action="super_cauchos.action_view_todo" sequence="2" groups="sales_team.group_sale_manager"/>
    
</odoo>
