<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate='0'>
        <record id="sale_order_view_order_form_presupuesto" model="ir.ui.view">
            <field name="name">sale.order.form.presupuesto</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='validity_date']" position="after">
                    <field name="tarifa" />
                    <field name="moneda_referencia" />
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="rif" />
                    <field name="direccion_factura" />
                    <field name="direccion_entrega" />
                    <field name="fecha_estimada" />
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="nombre_vendedor" />
                    <field name="asignacion" string="Asignado a" />
                    <field name="lapso_reserva_ini" />
                    <field name="lapso_reserva_end" />
                </xpath>
                <xpath expr="//field[@name='sale_order_template_id']" position="replace">
                </xpath>
                <xpath expr="//page[@name='customer_signature']" attrs="{'invisible': 1}" position="after">
                    <page groups="base.group_no_one" string="Niveles de aprobaciÃ³n" name="nivel_aprovacion">
                        <group>
                            <group>
                                <field name="por_aprobar" string="Por aprobar por" />
                            </group>
                            <group>
                                <field name="aprobacion" />
                                <field name="no_aprobado" />
                            </group>
                        </group>
                        <group string="Nota interna">
                            <field name="observaciones" nolabel="1" placeholder="Observaciones" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
